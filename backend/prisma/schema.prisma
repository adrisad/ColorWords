// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Estado {
  Nueva
  Aprendiendo
  Conocida
  Maestria
}

model Word {
  id        Int      @id @default(autoincrement())
  texto     String 
  estado    Estado
}
